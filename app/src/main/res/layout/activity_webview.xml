<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- WebView a pantalla COMPLETA -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Botón flotante para cerrar (esquina superior izquierda) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="#FFFFFF"
        android:backgroundTint="#80000000"
        android:contentDescription="Cerrar"
        android:elevation="8dp"
        app:fabSize="mini"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <!-- Botón flotante para compartir (esquina superior derecha) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_share"
        android:tint="#FFFFFF"
        android:backgroundTint="#80000000"
        android:contentDescription="Compartir"
        android:elevation="8dp"
        android:visibility="gone"
        app:fabSize="mini"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <!-- ProgressBar en la parte superior -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="top"
        android:progressTint="@color/colorPrimary"
        android:visibility="gone" />

</FrameLayout>

